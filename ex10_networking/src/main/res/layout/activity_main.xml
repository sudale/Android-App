<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30sp"
       android:text="get query 요청"
       android:id="@+id/get_req"/>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30sp"
       android:text="get path 요청"
       android:id="@+id/get_path"/>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30sp"
       android:text="get queryMap 요청"
       android:id="@+id/get_queryMap"/>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30sp"
       android:text="glide test"
       android:id="@+id/glide_test"/>
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:id="@+id/glide_image"/>

</LinearLayout>